{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		// Emit cannot be disabled.
		// Reference https://github.com/microsoft/TypeScript/issues/49844
		"noEmit": false,
		// Composite projects may not disable declaration emit.
		// Reference https://www.typescriptlang.org/tsconfig/#composite
		// Reference https://github.com/microsoft/TypeScript/issues/42873
		"declaration": true,
		"emitDeclarationOnly": true,
		// Vite's default `build.target` value is similar to ES2020.
		// Vite only handles syntax transforms and does not cover polyfills.
		// Reference https://vitejs.dev/guide/build.html#browser-compatibility
		"lib": ["ES2020", "DOM", "DOM.Iterable"]
	},
	"exclude": [
		"./node_modules/**",
		"./src/service-worker.js",
		"./src/service-worker.ts",
		"./src/service-worker.d.ts",
		// Exclude server files.
		"./src/lib/server/**/*.js",
		"./src/lib/server/**/*.ts",
		"./src/**/*.server.js",
		"./src/**/*.server.ts",
		"./src/**/+server.js",
		"./src/**/+server.ts"
	]
}
