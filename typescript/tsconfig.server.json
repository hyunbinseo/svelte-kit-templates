{
	"extends": "./tsconfig.shared.json",
	"include": [
		// Existing
		"./.svelte-kit/ambient.d.ts",
		"./.svelte-kit/non-ambient.d.ts",
		"./.svelte-kit/types/**/$types.d.ts",
		"./vite.config.js",
		"./vite.config.ts",
		// Added
		"./src/app.d.ts",
		"./src/lib/server/**/*.js",
		"./src/lib/server/**/*.ts",
		"./src/**/*.server.js",
		"./src/**/*.server.ts",
		"./src/**/+server.js",
		"./src/**/+server.ts"
	],
	// Node.js 18 supports all ES2022 APIs.
	// Reference https://node.green/#ES2022
	"compilerOptions": { "lib": ["ES2022"] }
}
